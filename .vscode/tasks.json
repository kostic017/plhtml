{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Tests: Diff",
            "type": "shell",
            "command": "code",
            "args": [
                "--diff",
                "tests/${input:testDiff}.expected",
                "tests/${input:testDiff}.actual",
            ],
            "problemMatcher": [],
        },
        {
            "label": "Tests: Clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-f",
                "tests/*.actual"
            ],
            "windows": {
                "command": "del",
                "args": [
                    "/Q",
                    "tests\\*.actual"
                ]
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "testDiff",
            "type": "pickString",
            "description": "Test to show diff for.",
            "options": [
                "fibonacci.scanner",
                "fibonacci.parser",
            ],
        },
    ]
}
